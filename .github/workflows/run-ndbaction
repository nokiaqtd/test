name: run-ndbaction

on:
  workflow_dispatch:
    inputs:
      profile:
        description: 'Profile name'
        required: true
      payload:
        description: 'JSON payload (string)'
        required: true

jobs:
  run:
    runs-on: self-hosted
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Run ndbaction
        run: node ndbaction.js --profile="${{ github.event.inputs.profile }}" --payload="${{ github.event.inputs.payload }}"
